{
  "name": "api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "prisma generate && tsc",
    "build:render": "cd ../.. && npm install && npm run build -w @gatherly/shared && cd packages/api && npx prisma generate && tsc",
    "start": "node dist/server.js",
