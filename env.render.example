# Render – API (packages/api)
# Live URL: https://gatherly-skl4.onrender.com
# Add these in Render Dashboard → Environment

# Use Node 18 for Render (avoids compatibility issues)
NODE_VERSION=18

# Database (Neon)
DATABASE_URL="postgresql://neondb_owner:YOUR_PASSWORD@ep-royal-waterfall-aijvnoxx-pooler.c-4.us-east-1.aws.neon.tech/neondb?sslmode=require"

# JWT
JWT_SECRET="generate-with-openssl-rand-base64-32"
JWT_REFRESH_SECRET="generate-another-random-string"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Cloudinary (image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# CORS – set after Vercel deploy
CONSUMER_URL="https://gatherly-consumer.vercel.app"
VENDOR_URL="https://gatherly-vendor.vercel.app"
